<!DOCTYPE html>
<html lang="en">
<%- include('layout/head') %>

<body>
    <%- include('layout/posts-header') %>
    <div>id: <%= res.id %></div>
    <div>title: <%= res.title %></div>
    <div>writer: <%= res.writer %></div>
    <div>content: <%= res.content %></div>
    <div>createdAt: <%= res.createdAt %></div>
    <% if(res.filetype == 'img') { %>
    <div>
        <a href='/posts/download/<%= res.fileId %>'><img src='<%= res.filepath %>'></a>
    </div>
    <% } else if (res.filepath) { %>
    <div>
        <a href='/posts/download/<%= res.fileId %>'><%= res.originalname %></a>
    </div>
    <% } %>
    <button onclick="postUpdate(<%= res.id %>)" ;>UPDATE</button>
    <button onclick="postDelete(<%= res.id %>)" ;>DELETE</button>
    <script>
        function postUpdate(id) {
            location.href = `/posts/update/${id}`;
        }

        function postDelete(id) {
            location.href = `/posts/delete/${id}`;
        }
    </script>
</body>

</html>